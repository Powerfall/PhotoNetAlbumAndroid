<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:id="@+id/txt_Image_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Image Name"
            android:gravity="center"
            android:textSize="20sp"/>
    <ImageView
            android:layout_below="@+id/txt_Image_name"
            android:adjustViewBounds="true"
            android:src="@mipmap/ic_launcher_round" android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars" android:id="@+id/img"/>
</LinearLayout>